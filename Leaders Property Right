			withalertscreen = FALSE;
			noalertscreen = FALSE;
		}
	}
	stage "Profit Calculation"{
		startwaitforall = TRUE;
		singleentry = FALSE;
		singleentrycontinuation = FALSE;
		timeouttype = always;
		timeout = 0;
		program{
			table = subjects;
			do{
				citizenDecision = find ( same ( Group ) & PlayerNum == 2 , citizenDecision );
			}
		}
		program{
			table = subjects;
			do{
				if ( PlayerNum == 1 ){
				  Profit = if ( citizenDecision == 1 ,  (leadershare * 0.8) * groupfund , leadershare * groupfund );
				}
				else{
				 Profit = if (citizenDecision == 1 , (citizenshare * 0.95) * groupfund  , citizenshare * groupfund );
				}
			}
		}
		screen action{
			usesbg = TRUE;
			withalertscreen = FALSE;
			noalertscreen = FALSE;
		}
		screen wait{
			usesbg = TRUE;
			withalertscreen = FALSE;
			noalertscreen = FALSE;
		}
	}
